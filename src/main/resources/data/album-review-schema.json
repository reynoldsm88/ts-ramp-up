{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Album Review",
  "type": "object",
  "properties": {
    "id": {
      "description": "unique identifier of the content",
      "type": "string"
    },
    "artist": {
      "description": "name of the artist",
      "type": "string"
    },
    "title": {
      "description": "title of the album being reviewed",
      "type": "string"
    },
    "review": {
      "description": "The content of the album review",
      "type": "string"
    },
    "score": {
      "description": "decimal score of the review, based between 1 and 10",
      "type": "number"
    }
  },
  "required": [
    "id",
    "artist",
    "title",
    "review",
    "score"
  ]
}